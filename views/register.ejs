  <link rel="stylesheet" href="css/registerform.css">
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
<form action="/register" method="post">
    <div class="container">


      <div class="row">

        <div class="col-xl-12">

          <div class="multistep-container">

            <div class="multistep-form-area">

              <div class="form-box">

                <ul class="active-button">

                  <li class="active">

                    <span class="round-btn">1</span>

                  </li>

                  <li>

                    <span class="round-btn">2</span>

                  </li>

                  <li>

                    <span class="round-btn">3</span>

                  </li>

                  <li>

                    <span class="round-btn">4</span>

                  </li>

                </ul>

                <h4> Personal Details </h4>
                <div class="form-group ">

                  <label for="Surname" class="required">Surname</label>

                  <input type="text" name="surName" id="Surname" class="form-control" required>

                </div>

                <div class="form-group">

                  <label for="Middlename" class="required">Middle Name</label>

                  <input type="text" name="middleName" id="Middlename" class="form-control" required>

                </div>

                <div class="form-group">

                  <label for="Lastname" class="required">Last Name</label>

                  <input type="text" name="lastName" id="Lastname" class="form-control" required>

                </div>

                <div class="form-group">

                  <label for="gender" class="required">Gender</label>

                  <select class="custom-select myinput" name="gender" id="gender">

                    <option value="male">Male</option>
                    <option value="female">Female</option>

                  </select>

                </div>

                <div class="button-row">

                  <input type="button" value="Next" class="next">

                </div>








              </div>

              <div class="form-box">

                <ul class="active-button">

                  <li class="active">

                    <span class="round-btn">1</span>

                  </li>

                  <li class="active">

                    <span class="round-btn">2</span>

                  </li>

                  <li>

                    <span class="round-btn">3</span>

                  </li>

                  <li>

                    <span class="round-btn">4</span>

                  </li>

                </ul>

                <h4> Professional Details[1] </h4>
                <div class="form-group">

                  <label for="Displayname" class="required">Display Name</label>

                  <input type="text" name="displayName" id="Displayname" class="form-control" required>

                </div>


                <div class="form-group">

                  <label for="username" class="required">Employee Id</label>

                  <input type="text" name="username" id="username" class="form-control" required>

                </div>

                <div class="form-group">

                  <label for="Password" class="required">Password</label>

                  <input type="password" name="password" id="Password" class="form-control" required>

                </div>

                <div class="form-group form-inline">

                  <label for="title" class="required">Title</label>

                  <label for="Dr" style="padding:0 20px;font-size: 20px;">Dr</label>
                  <input type="radio" name="title" id="Dr" class="form-control" value="Dr">
                  &nbsp;&nbsp;&nbsp;
                  <label for="Mr" style="padding:0 20px;font-size: 20px;">Mr</label>
                  <input type="radio" name="title" id="Mr" class="form-control" value="Mr">
                  &nbsp;&nbsp;&nbsp;
                  <label for="Ms" style="padding:0 20px;font-size: 20px;">Ms</label>
                  <input type="radio" name="title" id="Ms" class="form-control" value="Ms">
                  &nbsp;&nbsp;&nbsp;
                  <label for="Mrs" style="padding:0 20px;font-size: 20px;">Mrs</label>
                  <input type="radio" name="title" id="Mrs" class="form-control" value="Mrs">

                </div>

                <div class="form-group form-inline">

                  <label for="emtype" class="required">Employee Type</label>

                  <label for="teaching" style="padding:0 30px;font-size: 20px;">Teaching</label>
                  <input type="radio" name="employeeType" id="teaching" class="form-control" value="Teaching">
                  &nbsp;&nbsp;&nbsp;
                  <label for="non-teaching" style="padding:0 30px;font-size: 20px;">Non Teaching</label>
                  <input type="radio" name="employeeType" id="non-teaching" class="form-control" value="Non Teaching">

                </div>

                <div class="button-row">

                  <input type="button" value="Previous" class="previous">

                  <input type="button" value="Next" class="next">

                </div>




              </div>

              <div class="form-box">

                <ul class="active-button">

                  <li class="active">

                    <span class="round-btn">1</span>

                  </li>

                  <li class="active">

                    <span class="round-btn">2</span>

                  </li>

                  <li class="active">

                    <span class="round-btn">3</span>

                  </li>

                  <li>

                    <span class="round-btn">4</span>

                  </li>

                </ul>

                <h4> Professional Details[2] </h4>
                <div class = "form-group">

                                      <label for = "Department" class="required">Department</label>

                                       <select class = "custom-select myinput" name = "department" id = "Department">

                                          <option value = "CSE">CSE</option>
                                          <option value = "IT">IT</option>
                                          <option value = "CSBS">CSBS</option>

                                        </select>

                                    </div>

                                    <div class = "form-group">

                                      <label for = "designation" class="required">Designation</label>

                                       <select class = "custom-select myinput" name = "designation" id = "Designation">

                                          <option value = "Asst.Professor">Assistant Professor</option>
                                          <option value = "Assoc.Professor">Associate Professor</option>
                                          <option value = "Professor">Professor</option>
                                        </select>

                                    </div>






                                  <div class = "form-group">

                                    <label for = "img" class="required">Image</label>

                                    <input type = "file" name = "image" id = "img"  class = "form-control" required>

                                </div>


                                  <div class = "button-row">

                                    <input type = "button" value="Previous" class="previous">

                                    <input type = "button" value="Next" class="next">

                                  </div>


              </div>


              <div class="form-box">

                <ul class="active-button">

                  <li class="active">

                    <span class="round-btn">1</span>

                  </li>

                  <li class="active">

                    <span class="round-btn">2</span>

                  </li>

                  <li class="active">

                    <span class="round-btn">3</span>

                  </li>

                  <li class="active">

                    <span class="round-btn">4</span>

                  </li>

                </ul>

                <h4> Contact Details </h4>

                <div class="form-group">

                  <label for="Email" class="required">Email id</label>

                  <input type="email" name="emailId" id="Email" placeholder="sravan@xyz.com" class="form-control">

                </div>

                <div class="form-group">

                  <label for="AlternateEmail" class="required"> Alternate Email id:</label>

                  <input type="email" name="alternateEmailId" id="AlternateEmail" class="form-control">

                </div>

                <div class="form-group">

                  <label for="Mobile" class="required">Mobile Number </label>

                  <input type="tel" name="mobileNUmber" id="Mobile" class="form-control">

                </div>

                <div class="form-group">

                  <label for="contactNo" class="required">Emergency Contact Number </label>

                  <input type="tel" name="emergencyContactNo" id="contactNo" class = " form-control">
                </div>
                <div class="button-row">
                  <input type="button" value="Previous" class="previous">
                  <button type="submit" name="button">submit</button>
                </div>



              </div>

            </div>

          </div>

        </div>

      </div>

    </div>
</form>

  <script src="node_modules/jquery/dist/jquery.slim.min.js"></script>

  <script src="node_modules/popper.js/dist/umd/popper.min.js"></script>

